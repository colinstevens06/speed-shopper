{
	"extends": "@vue/tsconfig/tsconfig.web.json",
	"include": ["env.d.ts", "src/**/*.ts", "src/**/*.vue", "../types/*.d.ts"],
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "dist",
    "types": ["vite/client"],
		"paths": {
      "@components/*": ["src/components/*"], 
      "@composables/*": ["src/composables/*"], 
      "@models/*": ["src/models/*"], 
      "@router/*": ["src/router/*"], 
      "@services/*": ["src/services/*"], 
      "@store/*": ["src/store/*"], 
      "@styles/*": ["src/styles/*"],
			"@views/*": ["src/router/views/*"],
			"@utils/*": ["src/utils/*"]
		}
	},
}

