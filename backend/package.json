{
	"name": "backend",
	"packageManager": "yarn@3.3.1",
	"main": "server.js",
	"dependencies": {
		"express": "^4.18.2",
		"mysql2": "^3.2.0",
		"sequelizer": "^1.1.4"
	},
	"devDependencies": {
		"@types/express": "^4.17.17",
		"@types/mysql": "^2.15.21",
		"@types/node": "^18.11.12",
		"concurrently": "^7.6.0",
		"nodemon": "^2.0.21",
		"prettier": "^2.7.1",
		"typescript": "^4.9.5"
	},
	"workspaces": [
		"client"
	],
	"scripts": {
		"start-server": "node .",
		"format": "prettier --write \"./**/*.{vue,js,ts,scss}\"",
		"build": "yarn tsc",
		"start": "node dist/server.js",
		"predev": "yarn build",
		"dev": "concurrently \"yarn tsc --watch\" \"nodemon -q dist/server.js\""
	}
}
