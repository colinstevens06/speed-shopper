{
	"name": "backend",
	"packageManager": "yarn@3.3.1",
	"main": "server.js",
	"dependencies": {
		"express": "^4.18.2",
    "@prisma/client": "^4.11.0",
	},
	"devDependencies": {
		"@types/express": "^4.17.17",
    "@types/node": "^18.15.3",
    "prettier": "^2.8.4",
    "prisma": "^4.11.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
	},
	"workspaces": [
		"client"
	],
	"scripts": {
		"start-server": "node .",
    "format": "prettier --write  \"./**/*.{vue,js,ts,scss}\" && yarn prisma format",
		"build": "yarn tsc",
		"start": "node dist/server.js",
		"predev": "yarn build",
		"dev": "concurrently \"yarn tsc --watch\" \"nodemon -q dist/server.js\"",
    "migrate": "yarn prisma migrate dev --name init",
    "seed": "yarn ts-node ./prisma/seed.ts",
    "prestartserver": "node -e \"console.log('Running yarn tsc...')\" && yarn tsc",
    "startserver": "yarn prestartserver && node -e \"console.log('Building server...')\" && node ./build/index.js"
	},

  "private": true
}
