{
	"name": "backend",
	"packageManager": "yarn@3.3.1",
	"main": "server.js",
	"dependencies": {
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"node-cache": "^5.1.2",
		"pg": "^8.11.1",
		"pg-hstore": "^2.3.4",
		"sequelize": "^6.32.1",
		"sequelize-typescript": "^2.1.5"
	},
	"devDependencies": {
		"@types/cors": "^2.8.13",
		"@types/express": "^4.17.17",
		"@types/node": "^20.4.1",
		"prettier": "^2.8.4",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.0.2"
	},
	"workspaces": [
		"client"
	],
	"scripts": {
		"start-server": "node .",
		"format": "prettier --write  \"./**/*.{vue,js,ts}\"",
		"build": "yarn tsc",
		"start": "node dist/server.js",
		"predev": "yarn build",
		"dev": "concurrently \"yarn tsc --watch\" \"nodemon -q dist/server.js\"",
		"prestartserver": "node -e \"console.log('Running yarn tsc...')\" && yarn tsc",
		"startserver": "yarn prestartserver && node -e \"console.log('Building server...')\" && ts-node ./build/server.js"
	},
	"private": true,
	"_moduleAliases": {
		"@controllers": "build/controllers",
		"@db": "build/db/*",
		"@routes": "build/routes"
	}
}
