{
  "npm.packageManager": "yarn",
	"eslint.packageManager": "yarn",
	"editor.formatOnPaste": false,
	"editor.formatOnSave": true,
  "files.exclude": {
		"**/.nyc_output": true,
		"**/.yarn": true,
		"**/.vs": true,
		"**/coverage": true,
		"**/bin": true,
		"**/node_modules": true,
		"**/obj": true,
		"**/site": true,
		"**/TestResults": true,
		"**/wwwroot": true,
		"**/deploy": true,
		"**/playwright-report": true,
		"**/tests-out": true
	},
  "[prisma]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.tabSize": 2
	},
  "[scss]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.tabSize": 2
	},
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.tabSize": 2
	},
	"[vue]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.tabSize": 2,
		"editor.tabCompletion": "onlySnippets"
	},

    "workbench.colorCustomizations": {
		"activityBar.activeBackground": "#005e09",
		"activityBar.background": "#005e09",
		"activityBar.foreground": "#e7e7e7",
		"activityBar.inactiveForeground": "#e7e7e799",
		"activityBarBadge.background": "#090060",
		"activityBarBadge.foreground": "#e7e7e7",
		"commandCenter.border": "#e7e7e799",
		"sash.hoverBorder": "#005e09",
		"statusBar.background": "#002b04",
		"statusBar.foreground": "#e7e7e7",
		"statusBarItem.hoverBackground": "#005e09",
		"statusBarItem.remoteBackground": "#002b04",
		"statusBarItem.remoteForeground": "#e7e7e7",
		"titleBar.activeBackground": "#002b04",
		"titleBar.activeForeground": "#e7e7e7",
		"titleBar.inactiveBackground": "#002b0499",
		"titleBar.inactiveForeground": "#e7e7e799"
	},
    "peacock.color": "#002b04",


}
